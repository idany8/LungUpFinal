<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            layout="@layout/view_header"/>

        <TextView
            android:id="@+id/tv_sum_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#5668b5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp" />
        <TextView
            android:id="@+id/tv_sum_ex_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Plan"
            android:textSize="20dp"
            android:textColor="#2d3863"
            android:layout_marginTop="10dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#A6e4e4e4"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:id="@+id/btn_sum_edit_ex"

            android:src="@drawable/btn_edit_exercises_plan"/>
        <TextView
            android:id="@+id/tv_sum_last_usages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Usages"
            android:textSize="20dp"
            android:textColor="#2d3863"
            android:layout_marginTop="10dp" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#A6e4e4e4"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:id="@+id/btn_sum_detailed_perf"
            android:src="@drawable/btn_detailed_performance"/>




    </LinearLayout>
</ScrollView>