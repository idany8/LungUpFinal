<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_detailed_performance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_general"
    tools:context="com.example.idan.lungupfinal.PatientDetailedPerformance">


    <include
        layout="@layout/view_header"/>

    <TextView
        android:id="@+id/det_per_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Header"
        android:textSize="18dp"
        android:textColor="#2d3863"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/det_per_lineChart"></com.github.mikephil.charting.charts.LineChart>


    <com.github.mikephil.charting.charts.BarChart
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/det_per_barchart"></com.github.mikephil.charting.charts.BarChart>

</LinearLayout>
