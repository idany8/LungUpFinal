<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">



    <include
        layout="@layout/view_header"/>

    <TextView
        android:id="@+id/tv_spinner_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WindVane Spinner"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#5668b5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />
    <TextView
        android:id="@+id/tv_spinner_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_desc"
        android:textAlignment="center"
        android:textSize="11dp"
        android:background="#e3e6eb"
        android:textStyle="bold"
        android:textColor="#6777bb"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />

        <ImageView
            android:id="@+id/spn_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/windwave"
            android:layout_marginTop="10dp"
             />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0s\nMax"
            android:layout_marginLeft="20dp"
            android:id="@+id/spn_tv_max" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="0s\nAvg"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/spn_tv_max"
            android:id="@+id/spn_tv_avg"
 />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:textColor="#0e2cc1"
            android:id="@+id/spn_tv_current_time"
            android:gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
             />
</RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_ex_cancel"
            android:background="@null"
            android:paddingRight="20dp"
            android:id="@+id/spn_btn_cancel" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spn_btn_done"
            android:src="@drawable/btn_ex_done"
            android:background="@null"
            android:paddingLeft="20dp"/>


    </LinearLayout>



</LinearLayout>
