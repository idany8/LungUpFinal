<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_new_patient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general"
    tools:context="com.example.idan.lungupfinal.CreateNewPatient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <include
            layout="@layout/view_header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#2d3863"
            android:text="Please provide patient details"
            android:layout_marginBottom="10dp"
            />
        <EditText
            android:drawableLeft="@drawable/person_icon"
            android:width="300dp"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColorHint="#4b5bb0"
            android:textColor="#4b5bb0"
            android:id="@+id/et_cnp_name"
            />
        <EditText
            android:drawableLeft="@drawable/mail_icon"
            android:width="300dp"
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="E-Mail"
            android:textColorHint="#4b5bb0"
            android:textColor="#4b5bb0"
            android:id="@+id/et_cnp_username"
            />

        <EditText
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="13dp"
            android:width="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="#4b5bb0"
            android:textColor="#4b5bb0"
            android:id="@+id/et_cnp_password"
            />
        <EditText
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="13dp"
            android:width="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColor="#4b5bb0"
            android:textColorHint="#4b5bb0"
            android:id="@+id/et_cnp_c_password"
            />
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_create_new_patient"
            android:background="@null"
            android:paddingTop="10dp"
            android:src="@drawable/btn_create_account"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#2d3863"
            android:visibility="gone"
            android:text="@string/qr_info"
            android:id="@+id/tv_cnp_info"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_cnp_info"
            android:id="@+id/image"


           />

    </LinearLayout>
