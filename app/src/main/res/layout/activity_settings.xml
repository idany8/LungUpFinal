<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_general"
    tools:context="com.example.idan.lungupfinal.SettingsActivity">

    <include
        layout="@layout/view_header"/>

    <TextView
        android:id="@+id/sett_header_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#5668b5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/sett_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microphone initialize"
        android:textSize="16dp"
        android:textColor="#5668b5"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/sett_init_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="16dp"
        android:textColor="#5668b5"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp" />

    <Button
        android:text="alaram"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btn_alaram" />


</LinearLayout>
