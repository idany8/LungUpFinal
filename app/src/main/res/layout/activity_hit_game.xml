<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".soundmeter.HitGameActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:background="@drawable/background_general"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            layout="@layout/view_header"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score"
            android:textSize="40sp"
            android:id="@+id/txt_score"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp" />

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/img_hit"
            android:src="@drawable/plus"
            android:visibility="invisible"
            android:layout_alignTop="@+id/txt_score"
            android:layout_toLeftOf="@+id/txt_score"
            />

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:id="@+id/img_miss"
            android:src="@drawable/minus"
            android:visibility="invisible"
            android:layout_alignTop="@+id/txt_score"
            android:layout_toRightOf="@+id/txt_score"

             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/txt_sound_level"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>


        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"

            >

            <com.liulishuo.magicprogresswidget.MagicProgressCircle
                android:id="@+id/timer_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mpc_stroke_width="18dp"/>

            <TextView
                android:id="@+id/timer_LBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </RelativeLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btn_start_game"
            android:text="Start game"
            android:textSize="30dp"
            android:background="@drawable/btn_shape_bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/target"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

