<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general">



    <include
        layout="@layout/view_header"/>

    <TextView
        android:id="@+id/tv_ex_plan_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Exercises Plan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#5668b5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />

    <ImageButton
        android:id="@+id/add_row_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Add Row"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:src="@drawable/btn_add_new_exercise"/>

    <!-- A RecyclerView with some commonly used attributes -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ex_recycler_view"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scrollbars="vertical" />

    <ImageButton
        android:id="@+id/ex_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:background="@null"
        android:src="@drawable/btn_save_ex_plan"/>


</LinearLayout>